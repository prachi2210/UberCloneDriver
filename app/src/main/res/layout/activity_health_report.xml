<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<!--    tools:context=".activity.HealthReportActivity"-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/top_lyt"
            android:layout_height="@dimen/_40sdp">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:padding="@dimen/_4sdp"
                android:id="@+id/bck_btn_header"
                android:src="@drawable/logo_icon"
                android:layout_gravity="center"
                android:layout_height="@dimen/_30sdp"/>

            <TextView
                android:layout_width="0dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/appColor"
                android:textSize="@dimen/_12ssp"
                android:text="@string/health_report"
                android:layout_height="@dimen/_40sdp"/>


            <ImageView
                android:layout_width="40dp"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:text="Blood Group"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_width="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:textColor="@color/black"
            android:id="@+id/blood_gp_spinner"
            android:background="@drawable/grey_box"
            android:layout_marginTop="@dimen/_8sdp"
            android:paddingStart="@dimen/_5sdp"
            android:textSize="@dimen/_12ssp"
            android:text="Enter License Number"
            android:layout_height="@dimen/_30sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Had any surgery earlier ?"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_width="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:textColor="@color/appColor"
            android:background="@drawable/grey_box"
            android:layout_marginTop="@dimen/_8sdp"
            android:paddingStart="@dimen/_5sdp"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/surgery_spinner"
            android:text="select gear"
            android:layout_height="@dimen/_30sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Files"
            android:layout_height="wrap_content"/>
 <androidx.appcompat.widget.LinearLayoutCompat
     android:layout_width="match_parent"
     android:layout_marginTop="@dimen/_10sdp"
     android:padding="@dimen/_5sdp"
     android:orientation="horizontal"
     android:layout_marginHorizontal="@dimen/_20sdp"
     android:background="@drawable/dashed_line_box"
     android:layout_height="@dimen/_110sdp">
     <TextView
     android:layout_width="0dp"
     android:padding="@dimen/_4sdp"
     android:text="Upload Medical"
         android:layout_weight="1"
         android:id="@+id/upload_medical"
         android:layout_marginHorizontal="@dimen/_10sdp"
     android:textColor="@color/black"
         android:layout_marginVertical="@dimen/_20sdp"
         android:layout_height="wrap_content"/>
     <ImageView
     android:layout_width="0dp"
     android:padding="@dimen/_4sdp"
     android:text="Image"
         android:layout_weight="1"
       android:id="@+id/medical_image"
         android:src="@drawable/upic"
         android:textColor="@color/black"
     android:layout_gravity="center"
         android:layout_margin="@dimen/_10sdp"
     android:layout_height="match_parent"/>
 </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="match_parent"
        android:text="Done"
        android:textStyle="bold"
        android:id="@+id/upload_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="center"
        android:paddingVertical="3dp"
        android:background="@drawable/round_corner_button"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_height="@dimen/_35sdp"/>
</RelativeLayout>

