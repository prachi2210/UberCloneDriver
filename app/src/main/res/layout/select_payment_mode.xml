<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/header_layout"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_20sdp"

            android:layout_marginHorizontal="@dimen/_20sdp"
            android:gravity="end"
            android:text="Add Money To Smart Wallet"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:gravity="end"
            android:text="$ 150"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:gravity="end"
            android:text="Select Payment Mode"
            android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:text="Debit Card"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_20sdp"
           android:layout_marginVertical="@dimen/_10sdp"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp"
                android:gravity="end"
                android:id="@+id/text_cn"
                android:text="Card Number"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:gravity="end"
                android:id="@+id/card_number"
                android:layout_margin="@dimen/_10sdp"
                android:layout_below="@+id/text_cn"
                android:text="4546879005765978"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/card_number"
                android:id="@+id/card_dtl"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9ssp"
                        android:gravity="end"
                        android:text="Expiration Date"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:gravity="end"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_below="@+id/text_expd"
                        android:text="mm/dd"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:gravity="end"
                        android:text="CVV"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:gravity="end"
                        android:text="* * *"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_below="@+id/card_dtl"
                android:text="Save Card Details"
                android:layout_height="@dimen/_35sdp"/>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
               android:layout_alignParentEnd="true"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_below="@+id/card_dtl"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

            <RadioButton
                android:layout_width="wrap_content"
                android:text="Credit Card"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginVertical="@dimen/_24sdp"
        android:text="Pay 150"
        android:fontFamily="@font/poppins_regular"
        android:id="@+id/login_btn"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@drawable/round_corner_button"
        android:layout_marginHorizontal="25dp"
        android:layout_height="42dp"/>
</RelativeLayout>