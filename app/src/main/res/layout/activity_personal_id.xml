<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PersonalIdActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/top_lyt"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:padding="@dimen/_4sdp"
            android:id="@+id/bck_btn_header"
            android:src="@drawable/logo_icon"
            android:layout_gravity="center"
            android:layout_height="@dimen/_30sdp"/>

        <TextView
            android:layout_width="0dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/appColor"
            android:textSize="@dimen/_12ssp"
            android:text="@string/personal_id"
            android:layout_height="@dimen/_40sdp"/>


        <ImageView
            android:layout_width="40dp"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/top_lyt"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_50sdp"
                    app:civ_border_width="@dimen/_2sdp"
                    android:id="@+id/user_pic"
                    app:civ_border_color="@color/black"
                    android:layout_height="@dimen/_50sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/_8sdp"
                    android:textSize="@dimen/_9ssp"
                    android:text="Upload Your Picture"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/user_pic"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="Select ID Proof"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_width="match_parent"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/appColor"
                android:background="@drawable/grey_box"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:text="select gear"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:text="Enter ID Proof Number"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/black"
                android:background="@drawable/grey_box"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:hint="Enter ID Number"
                android:textColorHint="@color/black"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:text="DOB"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/black"
                android:background="@drawable/grey_box"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:hint="DD/MM/YYYY"
                android:textColorHint="@color/black"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="Files"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="@dimen/_30sdp">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_logo"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_trash"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/_25sdp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:padding="@dimen/_4sdp"
                android:text="Image"

                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/dashed_line_box"
                android:layout_gravity="center"
                android:layout_height="@dimen/_110sdp"/>
            <ImageView
                android:layout_width="match_parent"
                android:padding="@dimen/_4sdp"
                android:text="Image"
                android:visibility="gone"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/dashed_line_box"
                android:layout_gravity="center"
                android:layout_height="@dimen/_110sdp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="@dimen/_30sdp">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_logo"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_trash"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_25sdp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:padding="@dimen/_4sdp"
                android:text="@string/image"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/dashed_line_box"
                android:layout_gravity="center"
                android:layout_height="@dimen/_110sdp"/>
            <ImageView
                android:layout_width="match_parent"
                android:padding="@dimen/_4sdp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/dashed_line_box"
                android:layout_gravity="center"
                android:layout_height="@dimen/_110sdp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:src="@drawable/ic_baseline_arrow_back_24"
              android:textColor="@color/black"
              android:textSize="@dimen/_10ssp"
              android:layout_gravity="center"
              android:text="Any Recommendation"
              android:layout_height="wrap_content"/>

      <Switch
          android:layout_width="wrap_content"
          android:layout_gravity="center"
          android:layout_height="wrap_content"/>
      </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Others"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="Upload File (s)"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                   android:background="@drawable/blue_box"
                    android:text="Add File (s)"
                    android:paddingHorizontal="@dimen/_9sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:textColor="@color/appColor"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="Save"
                android:textStyle="bold"
                android:id="@+id/continue_btn"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="@dimen/_20sdp"
                android:gravity="center"
                android:paddingVertical="3dp"
                android:background="@drawable/round_corner_button"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_height="@dimen/_35sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</RelativeLayout>