<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VerifyOtpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/top_lyt"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:padding="@dimen/_4sdp"
            android:id="@+id/bck_btn_header"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="center"
            android:layout_height="@dimen/_30sdp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_height="@dimen/_40sdp"/>


        <ImageView
            android:layout_width="40dp"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"/>

    </LinearLayout>
    <!--    <androidx.cardview.widget.CardView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_centerInParent="true"-->
    <!--        app:cardUseCompatPadding="true"-->
    <!--        android:elevation="11dp"-->
    <!--        android:id="@+id/card_login"-->
    <!--        app:cardCornerRadius="20dp"-->
    <!--        android:layout_marginHorizontal="20dp"-->
    <!--        android:layout_height="wrap_content">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/top_lyt"
        android:id="@+id/otp_lyt"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="OTP Verification"

            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/main"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Enter the 4-digit code sent to you at"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="1234567891"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="#000"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Edit"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_25sdp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/appColor"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/root_otp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="4">

            <EditText
                android:id="@+id/otp_edit_box1"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="65dp"
                android:text=""
                android:background="@drawable/etbkd"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/otp_edit_box2"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="65dp"
                android:text=""
                android:background="@drawable/etbkd"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:inputType="number"
                android:maxLength="1"
                />

            <EditText
                android:id="@+id/otp_edit_box3"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="65dp"
                android:text=""
                android:background="@drawable/etbkd"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:inputType="number"
                android:maxLength="1"
                />

            <EditText
                android:id="@+id/otp_edit_box4"
                android:layout_width="30dp"
                android:layout_height="65dp"
                android:text=""
                android:background="@drawable/etbkd"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="1"
                />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:text="@string/submit"
            android:textStyle="bold"
            android:id="@+id/continue_btn"
            android:layout_below="@+id/otp_lyt"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:background="@drawable/round_corner_button"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_height="45dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Resend code in 02:59"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_12ssp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>