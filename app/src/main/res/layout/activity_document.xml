<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_lyt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_5sdp">

            <ImageView
                android:id="@+id/bck_btn_header"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/logo_icon"
                android:visibility="invisible" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:text="Driving License"
                android:textColor="@color/appColor"
                android:textSize="@dimen/_12ssp"
                android:visibility="invisible" />


            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_notification" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@drawable/imgkey" />



    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/tv_proceed"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"

            android:textColor="@color/appColor"
            android:textSize="@dimen/_14ssp"
            android:text="Driver Verification"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/linear_driving_license"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="0dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_weight="1"

                android:gravity="center_vertical"
                android:text="Driving License"
                android:layout_height="@dimen/_30sdp"/>


            <ImageView
                android:id="@+id/iv_driving_license"
                android:layout_width="@dimen/_30sdp"
                android:src="@drawable/ic_baseline_check_24"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="@dimen/_12ssp"
                android:gravity="center_vertical"
                android:text="Driving License"
                android:layout_height="@dimen/_30sdp"
                app:tint="#1D9E23" />


            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:src="@drawable/ic_move"
                android:textColor="@color/black"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_12ssp"
                android:gravity="center_vertical"
                android:text="Driving License"
                android:layout_height="@dimen/_30sdp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_personal_id_card"

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="@dimen/_12ssp"
                android:gravity="center_vertical"
                android:text="Personal Id Card"
                android:layout_height="@dimen/_30sdp"/>

            <ImageView
                android:id="@+id/iv_personal_id"
                android:layout_width="@dimen/_30sdp"
                android:src="@drawable/ic_baseline_check_24"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:visibility="gone"
                app:tint="#1D9E23"
                android:textSize="@dimen/_12ssp"
                android:gravity="center_vertical"
                android:text="Driving License"
                android:layout_height="@dimen/_30sdp"/>


            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:src="@drawable/ic_move"
                android:textColor="@color/black"
                android:padding="@dimen/_8sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_12ssp"
                android:gravity="center_vertical"
                android:text="Driving License"
                android:layout_height="@dimen/_30sdp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_health_card"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_health_card"
                android:layout_width="0dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_weight="1"

                android:gravity="center_vertical"
                android:text="@string/health_report"
                android:layout_height="@dimen/_30sdp"/>
            <ImageView
                android:id="@+id/iv_health_card"
                android:layout_width="@dimen/_30sdp"
                android:src="@drawable/ic_baseline_check_24"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone"
                app:tint="#1D9E23"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_30sdp"/>
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:src="@drawable/ic_move"
                android:textColor="@color/black"
                android:padding="@dimen/_8sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_12ssp"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_30sdp"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:drawableRight="@drawable/ic_move"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="@string/health_report"
            android:layout_height="@dimen/_30sdp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tv_proceed"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="Procced"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@drawable/round_corner_button"
        android:layout_marginHorizontal="25dp"
        android:layout_height="45dp"/>


</RelativeLayout>