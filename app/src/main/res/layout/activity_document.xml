<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_lyt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_5sdp">

            <ImageView
                android:id="@+id/bck_btn_header"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/logo_icon"
                android:visibility="invisible" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:text="Driving License"
                android:textColor="@color/appColor"
                android:textSize="@dimen/_12ssp"
                android:visibility="invisible" />


            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_notification" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@drawable/imgkey" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_baseline_arrow_back_24"
            android:text="Driving Verification"
            android:textColor="@color/appColor"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/tv_driving_license"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawableRight="@drawable/ic_move"
            android:gravity="center_vertical"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:text="Driving License"
            android:onClick="onClick"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tv_personal_id_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableRight="@drawable/ic_move"
            android:gravity="center_vertical"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:text="Personal Id Card"
            android:onClick="onClick"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tv_health_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:onClick="onClick"
            android:drawableRight="@drawable/ic_move"
            android:gravity="center_vertical"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:text="Health Report"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>