<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@drawable/car_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/welcome_back"
            android:textColor="#000"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Login to continue using Adeb"
            android:textColor="#000"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/lllogin"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldSchoolId"
            android:layout_width="match_parent"
            app:hintTextColor="@color/grey_color"
            app:boxBackgroundColor="@color/white"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="6dp"
                android:drawableTint="@color/grey_color"
                android:id="@+id/et_mobile"
                android:layout_margin="@dimen/_2sdp"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/poppins_light"
                android:drawableStart="@drawable/ic_phone" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldPassword"
            android:layout_width="match_parent"
            app:boxBackgroundColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">
            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="@dimen/_6sdp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:id="@+id/et_password"

                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/poppins_light"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="Forgot Password?"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:id="@+id/tv_forgot_password"
        android:onClick="onClick"
        android:textColor="#000"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_25sdp" />
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_24sdp"
        android:text="@string/login"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        android:onClick="onClick"
        android:textColor="@color/white"
        android:background="@drawable/round_corner_button"
        android:layout_marginHorizontal="25dp"
        android:layout_height="45dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Are you a New User?"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_10ssp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:text=" SignUp"
            android:textStyle="bold"
            android:onClick="onClick"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_10ssp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/main"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_25sdp" />
    </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>