<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/drawable_editext">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:clipChildren="true"
            android:elevation="@dimen/_15sdp"
            android:padding="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_12sdp">

            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/profile" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_toEndOf="@+id/cv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"

                android:fontFamily="@font/poppins_semibold"
                android:text="User Name"
                android:textColor="#575151"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/cv"
                android:fontFamily="@font/poppins_regular"

                android:text="NA ratings"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:text="25 May,2020"
            android:textColor="#575151"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="$50"
            android:textColor="#575151"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/drawable_editext"


        >


        <TextView
            android:id="@+id/toAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:fontFamily="@font/poppins"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:text="16th Avenue, 4th Cross Street "
            android:textColor="@color/black"
            android:textSize="15sp"
            app:drawableStartCompat="@drawable/ic_purple_cirlce" />



        <TextView
            android:id="@+id/dashLine"
            android:layout_width="4dp"
            android:layout_height="23dp"
            android:layout_below="@+id/toAddress"
            android:layout_marginStart="@dimen/_21sdp"
            android:layout_marginTop="-3dp"
            android:drawableTint="#f4f3f2"
            android:backgroundTint="#f4f3f2"
            android:background="@drawable/drawable_dash_line"
            android:gravity="center"
            android:layerType="software" />


        <TextView
            android:id="@+id/tv_from_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dashLine"
            android:layout_marginTop="-4dp"
            android:drawablePadding="@dimen/_12sdp"
            android:fontFamily="@font/poppins"
            android:text="Home"
            android:tint="#f4f3f2"
            android:backgroundTint="@color/black"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:drawableStartCompat="@drawable/ic_purple_cirlce" />

    </RelativeLayout>
</LinearLayout>